{
  "name": "@rapideditor/country-coder",
  "version": "5.5.1",
  "description": "Convert longitude-latitude pairs to ISO 3166-1 codes quickly and locally",
  "repository": "github:rapideditor/country-coder",
  "license": "ISC",
  "keywords": [
    "reverse geocoder",
    "country codes",
    "ISO 3166-1",
    "United Nations M49",
    "geolocation",
    "calling codes"
  ],
  "files": [
    "dist/",
    "src/"
  ],
  "type": "module",
  "source": "./src/country-coder.ts",
  "types": "./dist/country-coder.d.ts",
  "main": "./dist/country-coder.cjs",
  "module": "./dist/country-coder.mjs",
  "exports": {
    "import": "./dist/country-coder.mjs",
    "require": "./dist/country-coder.cjs",
    "types": "./dist/country-coder.d.ts"
  },
  "dependencies": {
    "which-polygon": "^2.2.1"
  },
  "devDependencies": {
    "@mapbox/geojson-rewind": "^0.5.2",
    "@types/bun": "^1.3.0",
    "@types/geojson": "^7946.0.16",
    "@types/which-polygon": "^2.2.5",
    "npm-run-all2": "^8.0.4",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "all": "run-s clean build test",
    "clean": "shx rm -rf dist",
    "build": "run-s format-json build:**",
    "build:browser": "bun build ./src/index.ts --target=browser --format=iife --minify --sourcemap=linked --outdir='./dist' --entry-naming='country-coder.iife.[ext]'",
    "build:cjs": "bun build ./src/country-coder.ts --target=node --format=cjs --sourcemap=linked --external=which-polygon --outdir='./dist' --entry-naming='country-coder.c[ext]'",
    "build:mjs": "bun build ./src/country-coder.ts --target=node --format=esm --sourcemap=linked --external=which-polygon --outdir='./dist' --entry-naming='country-coder.m[ext]'",
    "build:types": "tsc",
    "format-json": "bun run ./scripts/format-json.js",
    "prepare": "bun repl -e 'if (!Bun.semver.satisfies(Bun.version, `>=1.3.0`)) { console.error(`Project requires Bun version >=1.3.0`); process.exit(1) }'",
    "test": "bun test --dots --coverage tests/*.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1.3.0",
    "node": ">=20"
  }
}
